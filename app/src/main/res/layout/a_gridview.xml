<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/tv_l_kind"
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="믹스견"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_p_dog" />

        <TextView
            android:id="@+id/tv_l_place"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="광주동물 보호소"
            android:textColor="#817B7B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_l_date" />

        <TextView
            android:id="@+id/tv_l_time"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="수컷"
            android:textColor="#817B7B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_l_place" />

        <TextView
            android:id="@+id/tv_p_content"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="특이사항 없음"
            android:textColor="#817B7B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_l_time" />

        <TextView
            android:id="@+id/tv_l_date"
            android:layout_width="119dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="3.2kg"
            android:textColor="#817B7B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_l_kind" />

        <TextView
            android:id="@+id/l_kind"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="품종"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_p_dog" />

        <TextView
            android:id="@+id/l_place"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="관할보호센터"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_date" />

        <TextView
            android:id="@+id/l_time"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="성별"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_place" />

        <TextView
            android:id="@+id/p_content"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="특징"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_time" />

        <TextView
            android:id="@+id/l_date"
            android:layout_width="46dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="무게"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_kind" />

        <ImageView
            android:id="@+id/img_p_dog"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_a_dog" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
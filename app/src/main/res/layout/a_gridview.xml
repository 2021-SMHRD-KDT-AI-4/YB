<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="195dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_p_kind"
            android:layout_width="115dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:text="믹스견"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_p_dog" />

        <TextView
            android:id="@+id/tv_p_shelter"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:text="광주동물 보호소"
            android:textColor="#817B7B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_p_weight" />

        <TextView
            android:id="@+id/tv_p_sex"
            android:layout_width="125dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:text="수컷"
            android:textColor="#817B7B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_p_shelter" />

        <TextView
            android:id="@+id/tv_p_content"
            android:layout_width="125dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:text="특이사항 없음"
            android:textColor="#817B7B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_p_sex" />

        <TextView
            android:id="@+id/tv_p_weight"
            android:layout_width="119dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:text="3.2kg"
            android:textColor="#817B7B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_p_kind" />

        <TextView
            android:id="@+id/p_kind"
            android:layout_width="45dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="품종"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_p_dog" />

        <TextView
            android:id="@+id/p_shelter"
            android:layout_width="77dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="관할보호센터"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/p_weight" />

        <TextView
            android:id="@+id/p_sex"
            android:layout_width="55dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="성별"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/p_shelter" />

        <TextView
            android:id="@+id/p_content"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="특징"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/p_sex" />

        <TextView
            android:id="@+id/p_weight"
            android:layout_width="46dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="무게"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/p_kind" />

        <ImageView
            android:id="@+id/img_p_dog"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_a_dog" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
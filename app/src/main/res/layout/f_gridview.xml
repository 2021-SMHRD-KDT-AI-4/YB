<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="195dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_f_dog_picture"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/fdog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/f_kind"
            android:layout_width="50sp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="품종"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_f_dog_picture" />

        <TextView
            android:id="@+id/f_date"
            android:layout_width="50sp"
            android:layout_height="24sp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="목격날짜"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_kind" />

        <TextView
            android:id="@+id/f_time"
            android:layout_width="50sp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="목격시간"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_place" />

        <TextView
            android:id="@+id/f_place"
            android:layout_width="50sp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="목격위치"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_date" />

        <TextView
            android:id="@+id/tv_f_kind"
            android:layout_width="134dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:text="믹스견"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_f_dog_picture" />

        <TextView
            android:id="@+id/tv_f_date"
            android:layout_width="136dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="64dp"
            android:layout_marginTop="4dp"
            android:text="2021.07.21"
            android:textColor="#817B7B"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_f_kind" />

        <TextView
            android:id="@+id/tv_p_sex"
            android:layout_width="145dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="64dp"
            android:layout_marginTop="4dp"
            android:text="오전10시"
            android:textColor="#817B7B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_f_place" />

        <TextView
            android:id="@+id/tv_f_place"
            android:layout_width="138dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="64dp"
            android:layout_marginTop="4dp"
            android:text="운천저수지"
            android:textColor="#817B7B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_f_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
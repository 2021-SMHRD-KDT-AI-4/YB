<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_f_dog"
            android:layout_width="414dp"
            android:layout_height="389dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:src="@drawable/fdog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_l_place"
            android:layout_width="228dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginStart="188dp"
            android:layout_marginTop="540dp"
            android:text="운천저수지"
            android:textColor="#817B7B"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/l_kind"
            android:layout_width="82dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginTop="420dp"
            android:text="품종"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/l_date"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginTop="480dp"
            android:text="목격날짜"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/l_place"
            android:layout_width="152dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginTop="540dp"
            android:text="목격위치"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/l_time"
            android:layout_width="153dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginTop="600dp"
            android:text="목격시간"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_f_day"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="188dp"
            android:layout_marginTop="480dp"
            android:text="2021.07.21"
            android:textColor="#817B7B"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_l_kind"
            android:layout_width="193dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="188dp"
            android:layout_marginTop="420dp"
            android:text="믹스견"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_f_time"
            android:layout_width="200dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginStart="188dp"
            android:layout_marginTop="600dp"
            android:text="오전10시"
            android:textColor="#817B7B"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
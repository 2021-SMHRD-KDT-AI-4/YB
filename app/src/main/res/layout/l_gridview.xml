<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/p_kind"
            android:layout_width="33dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="품종"
            android:fontFamily="@font/nanumbarunpenb"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_l_dog" />

        <TextView
            android:id="@+id/p_weight"
            android:layout_width="66dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="실종날짜"
            android:fontFamily="@font/nanumbarunpenb"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/p_kind" />

        <TextView
            android:id="@+id/p_shelter"
            android:layout_width="68dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="실종위치"
            android:fontFamily="@font/nanumbarunpenb"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/p_weight" />

        <TextView
            android:id="@+id/p_sex"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="실종시간"
            android:fontFamily="@font/nanumbarunpenb"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/p_shelter" />

        <TextView
            android:id="@+id/tv_p_kind"
            android:layout_width="122dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:text="웰시코기"
            android:fontFamily="@font/nanumbarunpenb"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_l_dog" />

        <TextView
            android:id="@+id/tv_p_weight"
            android:layout_width="126dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:text="2021.07.21"
            android:fontFamily="@font/nanumbarunpenb"
            android:textColor="#817B7B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_p_kind" />

        <TextView
            android:id="@+id/tv_p_shelter"
            android:layout_width="123dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:text="운천저수지"
            android:fontFamily="@font/nanumbarunpenb"
            android:textColor="#817B7B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_p_weight" />

        <TextView
            android:id="@+id/tv_p_sex"
            android:layout_width="122dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:text="오전10시"
            android:fontFamily="@font/nanumbarunpenb"
            android:textColor="#817B7B"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_p_shelter" />

        <ImageView
            android:id="@+id/img_l_dog"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ldog" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
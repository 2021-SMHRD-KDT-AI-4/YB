<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".F_Dog_Write_1">

    <Button
        android:id="@+id/btn_f_next"
        android:layout_width="312dp"
        android:layout_height="42dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_round_pink"
        android:text="다음으로"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_f_picture" />

    <EditText
        android:id="@+id/edt_f_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="날짜를 선택해주세요."
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_f_dog_info" />

    <TextView
        android:id="@+id/tv_star9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="*"
        android:textColor="#FD0000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_f_place" />

    <Button
        android:id="@+id/btn_f_picture_plus"
        android:layout_width="94dp"
        android:layout_height="34dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#C6C6C6"
        android:text="사진첨부"
        android:textColor="#686767"
        android:textSize="12sp"
        android:background="@drawable/btn_round_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_f_picture" />

    <ImageView
        android:id="@+id/img_f_picture"
        android:layout_width="161dp"
        android:layout_height="140dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_f_tel"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_f_place"
        android:layout_width="71dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:text="목격장소"
        android:textColor="#787676"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_f_time" />

    <TextView
        android:id="@+id/tv_star6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:text="*"
        android:textColor="#FD0000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_f_dog_info" />

    <TextView
        android:id="@+id/tv_star10"
        android:layout_width="9dp"
        android:layout_height="29dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="*"
        android:textColor="#FD0000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_f_tel" />

    <Button
        android:id="@+id/btn_f_camera"
        android:layout_width="88dp"
        android:layout_height="33dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#C6C6C6"
        android:text="카메라"
        android:textColor="#686868"
        android:textSize="12sp"
        android:background="@drawable/btn_round_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_f_picture" />

    <EditText
        android:id="@+id/edt_f_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_f_place" />

    <TextView
        android:id="@+id/tv_star8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="*"
        android:textColor="#FD0000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_f_time" />

    <TextView
        android:id="@+id/tv_star7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="*"
        android:textColor="#FD0000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_f_day" />

    <EditText
        android:id="@+id/edt_f_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_f_time" />

    <TextView
        android:id="@+id/tv_f_time"
        android:layout_width="69dp"
        android:layout_height="36dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:text="목격시간"
        android:gravity="center"
        android:clickable="true"
        android:editable="false"
        android:focusable="false"
        android:textColor="#787676"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_f_day" />

    <TextView
        android:id="@+id/tv_f_dog_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        android:text="기본정보"
        android:textColor="#0B0B0B"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_f_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="시간을 선택해주세요."
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_f_day" />

    <TextView
        android:id="@+id/tv_f_day"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="30dp"
        android:text="목격날짜"
        android:gravity="center"
        android:clickable="true"
        android:editable="false"
        android:focusable="false"
        android:textColor="#787676"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_f_dog_info" />

    <TextView
        android:id="@+id/tv_f_picture"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:text="사진"
        android:textColor="#787676"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_f_tel" />

    <TextView
        android:id="@+id/tv_f_tel"
        android:layout_width="71dp"
        android:layout_height="36dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:text="연락처"
        android:textColor="#787676"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_f_place" />

</androidx.constraintlayout.widget.ConstraintLayout>
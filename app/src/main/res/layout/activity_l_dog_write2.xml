<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".L_Dog_Write1">

    <TextView
        android:id="@+id/appname8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/nanumbarunpenb"
        android:text="'찾아줄개'"
        android:textColor="#EFB29F"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_l_birth"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/nanumbarunpenb"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_l_sex" />

    <TextView
        android:id="@+id/tv_l_feature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/nanumbarunpenb"
        android:text="특징"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_l_kg" />

    <Spinner
        android:id="@+id/edt_l_sex"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanumbarunpenb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_l_dog_picture2" />
<!--    <Spinner
        android:id="@+id/spn_l_type"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/nanumbarunpenb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_l_color" />  -->


    <TextView
        android:id="@+id/tv_l_kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="35dp"
        android:text="무게(kg)"
        android:fontFamily="@font/nanumbarunpenb"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_l_type" />

    <TextView
        android:id="@+id/tv_l_dog_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        android:text="반려견정보"
        android:fontFamily="@font/nanumbarunpenb"
        android:textColor="#171717"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_l_feature"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/nanumbarunpenb"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_l_kg" />

    <TextView
        android:id="@+id/tv_l_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/nanumbarunpenb"
        android:text="품종"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_l_color" />

    <EditText
        android:id="@+id/edt_l_kg"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/nanumbarunpenb"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spn_l_type" />

    <TextView
        android:id="@+id/tv_l_vital"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nanumbarunpenb"
        android:text='"모두 필수항목입니다"'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_l_feature" />

    <TextView
        android:id="@+id/tv_l_dog_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="30dp"
        android:text="사진"
        android:fontFamily="@font/nanumbarunpenb"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_l_dog_info" />

    <TextView
        android:id="@+id/tv_l_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/nanumbarunpenb"
        android:text="출생연도(년생)"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_l_sex" />

    <Button
        android:id="@+id/btn_l_enroll"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_round_pink"
        android:fontFamily="@font/nanumbarunpenb"
        android:text="등록하기"
        android:textColor="#5E5C5C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_l_vital" />

    <TextView
        android:id="@+id/tv_l_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="105dp"
        android:text="성별"
        android:fontFamily="@font/nanumbarunpenb"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_l_dog_img" />

    <TextView
        android:id="@+id/tv_l_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/nanumbarunpenb"
        android:text="색"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_l_birth" />

    <Button
        android:id="@+id/btn_l_picture_plus"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_round_gray"
        android:text="사진첨부"
        android:fontFamily="@font/nanumbarunpenb"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_l_dog_info" />

    <EditText
        android:id="@+id/edt_l_color"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/nanumbarunpenb"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_l_birth" />

    <ImageView
        android:id="@+id/img_l_dog_picture2"
        android:layout_width="104dp"
        android:layout_height="90dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_l_dog_info"
        app:srcCompat="@drawable/one" />

    <Spinner
        android:id="@+id/spn_l_type"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/nanumbarunpenb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_l_color" />



</androidx.constraintlayout.widget.ConstraintLayout>